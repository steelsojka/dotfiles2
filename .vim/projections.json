{
  "src/**/*.ts&src/**/*.spec.ts": {
    "src/*.ts": { "type": "source", "alternate": "src/{}.spec.ts", "related": ["src/{}.spec.ts"] },
    "src/*.spec.ts": { "type": "test", "alternate": "src/{}.ts", "related": ["src/{}.ts"] }
  },
  "src/**/*.component.ts&src/**/*.html&src/**/*.module.ts": {
    "src/*.component.ts": {
      "type": "component",
      "related": ["src/{}.html", "src/{}.css", "src/{}.module.ts"]
    },
    "src/*.html": {
      "type": "template",
      "related": ["src/{}.component.ts", "src/{}.css", "src/{}.module.ts"]
    },
    "src/*.css": {
      "type": "styles",
      "related": ["src/{}.component.ts", "src/{}.html", "src/{}.module.ts"]
    },
    "src/*.module.ts": {
      "type": "module",
      "related": ["src/{}.component.ts", "src/{}.html", "src/{}.css.ts"]
    }
  }
}
