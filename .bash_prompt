function get_git_branch_prompt
{
  BRANCH=$(git rev-parse --abbrev-ref HEAD 2>/dev/null)

  if [ "$BRANCH" != "" ]; then
    echo " ($BRANCH)"
  fi
}

function smile_prompt
{
PS1=""

if [ $UID -eq 0 ]
then
#root user color
  UC="${RED}"
  PS1="${RED}root "
fi

DF='\[\e[0m\]'

BRANCH='$(get_git_branch_prompt)'
PS1="$PS1${CYAN}\W${BLUE}$BRANCH ${BYELLOW}\$${DF} "
}
