conky.config = {
    out_to_x = false,
    own_window = false,
    out_to_console = true,
    background = false,
    color1 = '#929292',
    color2 = '#00D600',
    color3 = '#ffffff',
    max_text_width = 0,
    update_interval = 2.0,
    total_run_times = 0,
    short_units = true,
    if_up_strictness = 'address',
    use_spacer = 'left',
    override_utf8_locale = false,
    cpu_avg_samples = 2,
